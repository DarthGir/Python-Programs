board_size = int(input("What size of game board? "))
#Ask the user what size of game board do they want to print?
for x in range(board_size):
  print(" --- " * board_size)
  print("|    " * (board_size + 1))

print(" --- " * board_size)
  
def print_horiz_line():
  print(" --- " * board_size)
  
def print_vert_line():
  print("|   " * (board_size + 1))
